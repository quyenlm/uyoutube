    <Text fx:id="txtMessage" GridPane.columnIndex="1" GridPane.rowIndex="6" />

    <HBox alignment="bottom_right" spacing="10" GridPane.columnIndex="2" GridPane.rowIndex="5">
        <Button fx:id="btnDownloadVideo" onAction="#handleSubmitButtonAction" text="Download" />
